<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Order Placed Successfully</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans min-h-screen flex items-center justify-center">

  <div class="max-w-3xl w-full bg-white p-8 rounded-lg shadow-lg border-t-4 border-green-400">
    <!-- Success Icon -->
    <div class="flex justify-center mb-6">
      <div class="bg-green-100 p-4 rounded-full shadow-lg">
        <svg class="w-16 h-16 text-green-500 mx-auto" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2l4-4M12 20a8 8 0 100-16a8 8 0 000 16z" />
        </svg>
      </div>
    </div>
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-4">Thank You for Your Order!</h1>
    <p class="text-center text-gray-600 mb-8">Your order has been placed successfully.</p>

    <!-- Order Details -->
    <div class="border-t border-gray-200 pt-4 mb-6">
      <h2 class="text-xl font-semibold text-gray-700 mb-4">Order Details</h2>
      
      <!-- Order Items -->
      <div class="space-y-4 mb-4">
        <% orderItems.forEach(function(item){ %>
        <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg shadow-sm transition hover:bg-gray-100">
          <div class="flex items-center space-x-4">
            <img src="<%= item.imageUrl || 'https://via.placeholder.com/80' %>" alt="Item Image" class="w-16 h-16 object-cover rounded-lg" />
            <div>
              <h3 class="font-semibold text-gray-800"><%= item.name %></h3>
              <p class="text-sm text-gray-600">Qty: <%= item.quantity %></p>
              <p class="text-sm font-semibold text-gray-900">$<%= item.priceAtPurchase.toFixed(2) %></p>
            </div>
          </div>
        </div>
        <% }) %>
      </div>

      <!-- Total Amount -->
      <div class="flex justify-between items-center bg-gray-100 p-4 rounded-lg font-semibold text-gray-700 shadow-inner">
        <span>Total Amount:</span>
        <span class="text-xl text-green-600">$<%= totalAmount.toFixed(2) %></span>
      </div>
    </div>

    <!-- Shipping Address -->
    <div class="border-t border-gray-200 pt-4 mb-6">
      <h2 class="text-xl font-semibold text-gray-700 mb-4">Shipping Address</h2>
      <p class="text-gray-600 mb-1"><strong>Name:</strong> <%= shippingAddress.name %></p>
      <p class="text-gray-600 mb-1"><strong>Address:</strong> <%= shippingAddress.addressLine1 %></p>
      <% if (shippingAddress.addressLine2) { %>
      <p class="text-gray-600 mb-1"><%= shippingAddress.addressLine2 %></p>
      <% } %>
      <p class="text-gray-600 mb-1"><strong>City:</strong> <%= shippingAddress.city %></p>
      <p class="text-gray-600 mb-1"><strong>State:</strong> <%= shippingAddress.state %></p>
      <p class="text-gray-600 mb-1"><strong>Postal Code:</strong> <%= shippingAddress.postalCode %></p>
      <p class="text-gray-600 mb-1"><strong>Country:</strong> <%= shippingAddress.country %></p>
      <p class="text-gray-600 mb-1"><strong>Phone:</strong> <%= shippingAddress.phone %></p>
    </div>

    <!-- Order Status -->
    <div class="text-center mb-6">
      <span class="inline-block bg-green-100 text-green-700 px-4 py-2 rounded-full font-semibold shadow-md">Order Confirmed!</span>
    </div>

    <!-- Button to go back or continue shopping -->
    <div class="flex justify-center space-x-4">
      <a href="/" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg shadow-lg font-semibold transition">Continue Shopping</a>
      <a href="/orders" class="bg-gray-600 hover:bg-gray-700 text-white px-6 py-3 rounded-lg shadow-lg font-semibold transition">View My Orders</a>
    </div>
  </div>

</body>
</html>